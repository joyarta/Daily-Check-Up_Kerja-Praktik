<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/set_lokasi_2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/logokpi_1"
            android:layout_width="201dp"
            android:layout_height="70dp"
            android:layout_marginStart="270dp"
            android:layout_marginTop="50dp"
            android:contentDescription="logokpi_2"
            android:src="@drawable/logokpi"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="141dp">

        <TextView
            android:layout_width="203dp"
            android:layout_height="50dp"
            android:layout_marginTop="60dp"
            android:text="Daily"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="60dp"
            android:paddingLeft="9dp"
            android:text="Check Up"
            android:textAlignment="textStart"
            android:textColor="#194A9C"
            android:textSize="36sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Silahkan pilih Lokasi Kerja terlebih dahulu"
                android:textColor="#000000"
                tools:ignore="RtlCompat" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:background="@drawable/setlokasi"
            android:gravity="center"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:autofillHints="lokasi"
                android:drawableEnd="@drawable/baseline_arrow_drop_down_24"
                android:paddingLeft="20dp"
                tools:ignore="SpeakableTextPresentCheck" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/img_find_location" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/button2"
            android:layout_width="250dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:backgroundTint="@color/btn_warna"
            android:text="Set Lokasi"
            android:textAllCaps="false"
            android:textSize="19dp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
