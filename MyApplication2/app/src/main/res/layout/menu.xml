<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/set_lokasi_2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="187dp"
        android:baselineAligned="false"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnback"
            android:layout_width="46dp"
            android:layout_height="37dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/baseline_arrow_back_ios_24"
            android:backgroundTint="#000000"
            android:paddingBottom="30dp"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <ImageView
            android:id="@+id/logokpi_1"
            android:layout_width="201dp"
            android:layout_height="88dp"
            android:layout_marginStart="255dp"
            android:contentDescription="logokpi_2"
            android:src="@drawable/logokpi" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvlokasi"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginTop="12dp"
            android:background="#EEEEEE"
            android:gravity="center"
            android:text="Saat ini anda sedang berada di"
            android:textColor="#0E0E0E"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="580dp"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        >

        <Button
            android:id="@+id/btnta"
            android:layout_width="340dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:paddingTop="12dp"
            android:backgroundTint="@color/pengecekan_personil_TA"
            android:drawableLeft="@drawable/baseline_add_24"
            android:text="Pengecekan Personil TA"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnmk"
            android:layout_width="340dp"
            android:layout_height="100dp"
            android:layout_gravity="center"

            android:backgroundTint="@color/pengecekan_mitra_kerja"
            android:drawableLeft="@drawable/baseline_add_24"
            android:text="Pengecekan Mitra Kerja"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18dp"/>

        <Button
            android:id="@+id/btnpk"
            android:layout_width="340dp"
            android:layout_height="100dp"
            android:layout_gravity="center"

            android:backgroundTint="@color/pengecekan_pekerja"
            android:drawableLeft="@drawable/baseline_add_24"
            android:text="Pengecekan Pekerja"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18dp"/>

        <Button
            android:id="@+id/btntm"
            android:layout_width="340dp"
            android:layout_height="100dp"
            android:layout_gravity="center"

            android:backgroundTint="@color/pengecekan_tamu"
            android:drawableLeft="@drawable/baseline_add_24"
            android:text="Pengecekan Tamu"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18dp"/>

        <Button
            android:id="@+id/btntkjp"
            android:layout_width="340dp"
            android:layout_height="100dp"
            android:layout_gravity="center"

            android:backgroundTint="#9EEAE0E0"
            android:drawableLeft="@drawable/baseline_add_24"
            android:drawableTint="#8D8686"
            android:text="Pengecekan TKJP Dumai"
            android:textAllCaps="false"
            android:textColor="#8D8686"
            android:textSize="18dp"/>
    </LinearLayout>


</LinearLayout>

